<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_userflower"
    tools:context="UserSqliteFlower.UserActivity">

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/textviewuserview"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="275dp"
        android:layout_marginRight="20dp"
        android:textColorHint="@color/white"
        android:hint="Çiçek adını  giriniz :" />

    <TextView
        android:id="@+id/textviewDatapicker"
        android:layout_width="235dp"
        android:background="@drawable/textviewuserview"
        android:layout_height="45dp"
        android:textColor="@color/white"
        android:layout_below="@+id/edittext"
        android:layout_marginStart="25dp"
        android:textSize="20dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:hint="son sulama tarihi"
        android:textColorHint="@color/white"/>

    <Button
        android:id="@+id/datapicterbutton"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_below="@+id/edittext"
        android:layout_marginLeft="20dp"
        android:background="@drawable/buttonuser"
        android:textColor="@color/black"
        android:fontFamily="@font/yazi1"
        android:textSize="20dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/textviewDatapicker"
        android:text="tarih" />

    <Button
        android:id="@+id/AlarmStopButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textColor="@color/black"
        android:background="@drawable/buttonuser"
        android:text="güncelle"
        android:fontFamily="@font/yazi1"
        android:textSize="20dp"
        android:layout_below="@+id/textviewDatapicker"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <ImageView
        android:id="@+id/SaveButton"
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/add" />

    <ImageView
        android:layout_width="95dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:id="@+id/delete"
        android:layout_marginBottom="10dp"
        android:src="@drawable/delete"/>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/image10"
        android:layout_below="@+id/datapicterbutton"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="35dp"
        android:src="@drawable/vine" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/flower4"
            android:layout_width="136dp"
            android:layout_height="0dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="276dp"
            android:src="@drawable/flower2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/floar"
            android:layout_width="146dp"
            android:layout_height="145dp"
            android:src="@drawable/floar1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/flower4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="164dp"
        android:layout_height="138dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="1dp"
        android:src="@drawable/iris" />


</RelativeLayout>